# (c) 2004 Martin Man <mman@swac.cz>

set -e

. @MYDATA@/functions

print_banner
parse_commandline $* ||\
    usage "product.conf {-t||-b branch} {-b new_branch}"

if [ $MODE != "trunkbranch" ] && [ $MODE != "branchbranch" ]
then
    echo "ERROR: $0 is supposed to work with {-t -b} or {-b -b} only"
    exit 1
fi

do_process_config || exit 1

do_prepare_variables

echo ""
echo "Product: $src_url"
echo "Branching to: $dst_url"
wait_for_user_break

svn_copy "$src_url" "$dst_url" "$PRODUCT branch $ARG2 generated by $0" || exit 1

exit 0

