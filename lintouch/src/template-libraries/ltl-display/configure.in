dnl Process this file with autoconf to produce a configure script.
AC_INIT(README)
AC_CONFIG_AUX_DIR(config)
AM_INIT_AUTOMAKE(ltl-display, 1.7.0)

dnl Checks for programs
AC_PROG_CC
AC_PROG_CXX
AC_PROG_INSTALL

LNT_PROG_DOXYGEN

dnl Checks for libraries
AM_PATH_CPPUNIT(1.8.0,,[
    AC_MSG_WARN([])
    AC_MSG_WARN([CppUnit not found])
    AC_MSG_WARN([Please install CppUnit from http://cppunit.sourceforge.net])
    AC_MSG_WARN([])
    AC_MSG_ERROR([Sorry, I can't continue without CppUnit])
])

LNT_LIB_QT
CHECK_QT_MISC
PKG_CHECK_MODULES(LTL, liblttemplates)

dnl Checks for header files

dnl Checks for typedefs, structures, and compiler characteristics.

dnl Checks for library functions.

dnl Miscelaneous Variables
LNT_VAR_TODAY
MWOPTTARGETS=""
AC_SUBST(MWOPTTARGETS)

LTL_LFLAGS="${LTL_LFLAGS} -Wl,-rpath,build"
AC_SUBST(LTL_LFLAGS)

LTLDISPLAY_TOP_SRCDIR="\$(top_srcdir)"
AC_SUBST(LTLDISPLAY_TOP_SRCDIR)

dnl Output necessary files
AC_OUTPUT([
     Makefile
     config.h
     doc/Makefile
     doc/ltl-display.dox
     config_shared.pri
     config_unix.pri
])

